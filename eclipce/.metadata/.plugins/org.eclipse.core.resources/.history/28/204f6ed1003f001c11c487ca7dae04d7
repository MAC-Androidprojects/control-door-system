#define F_CPU 8000000

#include"lcd.h"
#include"keypad.h"
#include<util/delay.h>
#include<avr/io.h>
#include"std_types.h"
#include"uart.h"
#include"timer0.h"

uint8 get_passChar();
void state_one();
void state_two();
void state_three();
void check_pass(uint8 *pass1 , uint8 *pass2);
void repeat_pass(uint8 *pass1);
void transmit_pass(uint8 state_flag);
void door_display_control();
void timer_normal_processing_mc1();
void breakdown_state_lcd();
void timer_normal_processing_error_mc1();
void changePass_state();



uint8 pass1[5] ;
uint8 pass2[5] ;
uint8 pressed_key;
uint16 timer_flag_mc1 = 0 ;
uint16 timer_error_flag = 0 ;
uint8 err_stop = 0 ;
uint8 stop_open_mc1 = 0;
uint8 stop_waiting_mc1 = 0 ;
uint8 stop_close_mc1 = 0 ;
timer0_config config = {0 , NORMAL , 0 ,ONE_ZERO_TWO_FOUR};



int main(void){
	uart_ConfigType conifg_uart = {DISABLED , ONE_BIT , EIGHT_BIT , 9600};
	UART_init(&conifg_uart);
	LCD_init();
	SREG |= (1 << 7);
	while(1){
		state_one();
	}
}

uint8 get_passChar(){
	pressed_key = KEYPAD_getPressedKey();
	_delay_ms(400);
	LCD_displayCharacter('*');
	return pressed_key;
}

/*
 * Description :
 * This function is to check that the first pass and the repeated are equal
 */
void check_pass(uint8 *pass1 , uint8 *pass2){
	uint8 is_matched = 0 ;
	LCD_clearScreen();
	for(int i = 0 ; i<5 ; i++){
		if(pass1[i] != pass2[i]){
			is_matched = 1 ;
		}
	}
	if (is_matched){
		LCD_moveCursor(0, 0);
		LCD_displayString("Mismatch");
		_delay_ms(1000);
		state_one();
	}
	else{
		transmit_pass(2);
		state_two();
	}
}
/*
 * Description :
 * This is the first state of the program when the user must enter a new password
 */
void state_one(){
	LCD_clearScreen();
	LCD_moveCursor(0, 0);
	LCD_displayString("Enter the pass.");
	LCD_moveCursor(1, 0);
	for (int i = 0 ; i<5 ; i++){
		pass1[i] = get_passChar();
	}
	repeat_pass(pass1);
}

void repeat_pass(uint8 *pass1){
	LCD_clearScreen();
	LCD_moveCursor(0, 0);
	LCD_displayString("Renter the pass.");
	LCD_moveCursor(1, 0);
	for (int i =0 ; i<5 ; i++){
		pass2[i] = get_passChar();

	}
	check_pass(pass1, pass2);
}

void transmit_pass(uint8 state_flag){
	for (int i = 0 ;i<5 ; i++){
		UART_sendByte(pass1[i]);
		_delay_ms(10);
	}
	UART_sendByte(state_flag);

}

void state_two(){
	TIMER0_Deinit();
	LCD_clearScreen();
	LCD_moveCursor(0,1);
	LCD_displayString("+ : Open door");
	LCD_moveCursor(1,1);
	LCD_displayString("- : Change pass");
	pressed_key = KEYPAD_getPressedKey();
	_delay_ms(400);
	if (pressed_key == '+'){
		state_three();
	}
	else if(pressed_key == '-'){
		changePass_state();
	}
	else {
		state_two();
	}

}

void state_three(){
	LCD_clearScreen();
	LCD_moveCursor(0, 0);
	LCD_displayString("Enter the pass.");
	LCD_moveCursor(1, 0);
	for (int i = 0 ; i<5 ; i++){
		pass1[i] = get_passChar();
	}
	transmit_pass(0);
	uint8 is_matched =UART_recieveByte();
	if (is_matched == 1){
		state_three();
	}
	else if (is_matched == 0) {
		door_display_control();
	}
	else if(is_matched == 3){
		breakdown_state_lcd();
	}
}

void breakdown_state_lcd(){
	LCD_clearScreen();
	LCD_displayString("Go away !!!!");
	TIMER0_init(&config);
	TIMER0_setCallBack(timer_normal_processing_error_mc1);
	while(!err_stop){}
	err_stop = 0 ;
	state_two();

}

void door_display_control(){
	TIMER0_init(&config);
	TIMER0_setCallBack(timer_normal_processing_mc1);
	LCD_clearScreen();
	LCD_displayString("Door unlocking");
	while(!stop_open_mc1){};
	UART_sendByte(1);
	LCD_clearScreen();
	while(!stop_waiting_mc1){};
	UART_sendByte(2);
	LCD_displayString("Door locking");
	while(!stop_close_mc1){};
	UART_sendByte(3);
	stop_open_mc1 = 0 ;
	stop_waiting_mc1 = 0 ;
	stop_close_mc1 = 0 ;
	state_two();
}

void timer_normal_processing_mc1(){
	timer_flag_mc1++;
	if(timer_flag_mc1 == 465){
		stop_open_mc1 = 1 ;
	}
	else if(timer_flag_mc1 == 555){
		stop_waiting_mc1 = 1 ;
	}
	else if (timer_flag_mc1 == 1015){
		stop_close_mc1 = 1;
		timer_flag_mc1 = 0;
		TIMER0_Deinit();
	}
}

void timer_normal_processing_error_mc1(){
	timer_error_flag++ ;
	if(timer_error_flag == 1830){
		err_stop = 1 ;
		timer_error_flag = 0 ;
		TIMER0_Deinit();
	}
}

void changePass_state(){
	LCD_clearScreen();
	LCD_moveCursor(0, 0);
	LCD_displayString("Enter the pass.");
	LCD_moveCursor(1, 0);
	for (int i = 0 ; i<5 ; i++){
		pass1[i] = get_passChar();
	}
	transmit_pass(1);
	uint8 is_matched =UART_recieveByte();
	if (is_matched == 1){
		state_three();
	}
	else if (is_matched == 0) {
		state_one();
	}
	else if(is_matched == 3){
		breakdown_state_lcd();
	}
}


