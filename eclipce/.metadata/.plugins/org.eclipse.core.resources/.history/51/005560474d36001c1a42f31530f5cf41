#include "uart.h"

int main(void)
{
	uint8 Str[20];
	uint8 data;
	uart_ConfigType structure = {DISABLED , ONE_BIT , EIGHT_BIT , 9600};

		/* Initialize the UART driver with Baud-rate = 9600 bits/sec */
		UART_init(&structure);

	/* Initialize the UART driver with Baud-rate = 9600 bits/sec */
	UART_init(9600);

    while(1)
    {
		data = UART_recieveByte(); /* Receive Byte from Terminal1 */
		UART_sendByte(data);       /* Re-send the received byte to Terminal2 */
		//UART_receiveString(Str);     /* Receive String from Terminal */
	    //UART_sendString(Str);        /* Re-send the string to Terminal2 */
    }
}

