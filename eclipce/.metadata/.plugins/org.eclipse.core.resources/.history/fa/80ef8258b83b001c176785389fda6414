#ifndef TIMER0_H_
#define TIMER0_H_

typedef enum {
NO_CLK , NO_PRESCALER , EIGHT , SIX_FOUR , TWO_FIVE_SIX , ONE_ZERO_TWO_FOUR , EXT_FALLING , EXT_RAISING
}timer0_prescale;


typedef struct {
	timer0_init_value val ;
	timer0_prescale prescaler ;
	timer0_mode mode;
	timer0_compare_value comp_val ;
}timer0_config;


#endif /* TIMER0_H_ */
